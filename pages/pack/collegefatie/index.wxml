<view class="images_box">
  <block wx:for="{{imgbox}}">
    <view class='img-box' bindtap="topic_preview" data-id="{{item.id}}" data-url="{{item.url1}}">
      <image class='img' mode="aspectFill" src='{{item.url1}}'></image>
      <view class='img-delect' data-deindex='{{index}}' catchtap='imgDelete1' data-id="{{item.id}}">
        <image class='img' src='http://47.94.16.158:8001/62.png'></image>
      </view>
    </view>
  </block>
  <view class='img-box' bindtap='addPic1' data-id="{{item.id}}" wx:if="{{imgbox.length<3}}">
    <image class='img' src='http://47.94.16.158:8001/273.png'></image>
  </view>
</view>
