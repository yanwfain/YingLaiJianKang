<view class="title">
  <input type="text" placeholder="标题" bindinput="title" value="{{title}}" />
</view>
<view class="textart">
  <textarea class="txear" bindinput="inptxtval" placeholder="说点什么…" value="{{inptxtval}}" show-confirm-bar=""
