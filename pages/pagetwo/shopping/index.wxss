/* pages/shopping/index.wxss */
.right_top{
  display: flex;
  align-items: center;
  width: 90%;
  font-size: 26rpx;
  height: 64rpx;
  border-radius: 40rpx;
  /* border:1px solid #F6F6F6; */
  margin: 0 auto;
  background: #EFEFEF;
  margin-top:10rpx
}
.right_top image{
  width: 40rpx;
  height: 40rpx;
  margin-right:14rpx;
  margin-left:14rpx;
 
}
.inp_top{
  /* color:#e4e4e4; */
}
.swipTop{
  width: 90%;
  height: 430rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.shop_swiper{
  width: 100%;
  height: 430rpx;

}
.shop_swiper image{
  width: 100%;
  height: 100%;
}
.dots{
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* width: 40%; */
  bottom: 20rpx;
  width: 100%;
  /* right: 10%; */

}

.dot{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  /* border: 2rpx #F8542E solid; */
  background: black;
  background-color: #a3a3a3;
  margin: 0 10rpx;
  transition: all .7s;

}

.active{
  width: 60rpx;
  transition: all .7s;
  height: 14rpx;
  border-radius: 60rpx;
  background-color: white;

}
.listcont{
  width: 94%;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  margin-top: 30rpx;
  justify-content: space-between;

}
.lcontlop{
  width: 42%;
  margin: 2% ;
  padding:2%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F6F6F6;
  border-radius: 12rpx;

}
.left_txt{
  width: 60%;

}
.lop_txt{
  font-size:34rpx;
  font-weight: 600;
}
.lop_txts{
  font-size:24rpx;
  color: #767676;
  margin-top: 8rpx;
}
.lcontlop image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.title_hot{
  font-size:34rpx;
  font-weight: 600;
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.list {
  width: 48%;
  margin: 2% 1%;
  box-shadow: 1px 2px 6px #E0E0E0;
  border-radius: 14rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.list image {
  width: 100%;
  height: 326rpx;
}

.tit_bunew {
  width: 94%;
  margin: 0 auto;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.botmodelt {
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.num_new {
  color: #767676;
}

.pick {
  color: #ED6F00;
  font-weight: 600;
  font-size: 32rpx;
}
.tab_shoplist{
  width: 92%;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
}